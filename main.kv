<Tela>:
    orientation: 'vertical'

    padding: ('20dp', '40dp', '20dp', '20dp')
    spacing: '15dp'
    
    Button:
        text: "Grave"
        background_normal:''
        background_color: [0.1, 0.5, 0.1, 1]
        color: [1, 1, 1, 1]
        font_size: sp(20)
        size_hint: (0.8, None)
        height: dp(60)
        on_release: root.tocar_audio('1.wav')

    Button:
        text: "Medio"
        background_normal: ''
        background_color: [1, 1, 0, 1]
        color: [0, 0, 0, 1]
        font_size: sp(20)
        size_hint: (0.8, None)
        height: dp(60)
        on_release: root.tocar_audio('2.wav')

    Button:
        text: "Agudo"
        background_normal:''
        background_color: [0.2, 0.4, 0.8, 1]
        color: [1, 1, 1, 1]
        font_size: sp(20)
        size_hint: (0.8, None)
        height: dp(60)
        on_release: root.tocar_audio('3.wav')
